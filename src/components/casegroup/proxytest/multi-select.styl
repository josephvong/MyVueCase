input[type=checkbox]
  display none
  
.multi-select
	padding:0 0.5rem
	display:flex
	flex-direction row
	flex-wrap wrap

	input,label
		order:2
		
	hr
		display none
		order 1
		width:100%
	
	label
		line-height 3rem
		flex:1 1 28%
		max-width 28%
		border:1px solid silver
		text-align center
		margin 0 0.5rem 1rem 0
		background-color:white
		border-radius:0.25rem
		cursor:pointer
	
	:checked+label
		order 0 
		background-color:green
		border-color darken(green,5%)
		color white
		
		~ hr  
			display:block
		