input[type=radio],
input[type=checkbox]
  display none

[type=radio],[type=checkbox]

label
	padding-left: 1.5rem
	position relative
	&:before
		border: 1px solid red
		content:''
		width:1rem
		height:1rem
		position:absolute
		top:0
		left:0
		transition: all 0.5s
	&:after
		content : ''
		position absolute
		width 0.5rem
		height:0.5rem
		background-color:green
		top:0.5rem
		left: 0.5rem
		margin-left:-0.2rem
		margin-top:-0.2rem
		opacity:0
		transition: all 0.5s

input:checked + label
	&:before
		border-color green
	&:after
		opacity:1



[type=radio]+label
	&:before
	&:after
		border-radius: 50%